@page
@model Jovera.Areas.Store.Pages.ManageItem.AddItemModel
@inject CRMDBContext _context
@{
    ViewBag.Title = @sharedResource["Add Product"];
    ViewBag.pTitle = @sharedResource["Add Product"];
    ViewBag.pageTitle = @sharedResource["Product"];
    var Categories = _context.MiniSubCategories.Select(e => new { e.MiniSubCategoryId, e.MiniSubCategoryTLAR, e.MiniSubCategoryTLEN });


}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@sharedResource["Add Product"]</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div class="row gy-4">
                        @* <div class="col-xxl-3 col-md-6">
                        <div>
                        <label for="basiInput" class="form-label">Basic Input</label>
                        <input type="password" class="form-control" id="basiInput">
                        </div>
                        </div>*@
                        <!--end col-->
                        <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                        <form asp-area="CRM" method="post" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                            <input type="text" asp-for="@Model.AddItem.StoreId" value="@Model.AddItem.StoreId" hidden />
                            <div class="modal-body">
                                <input type="hidden" id="id-field" />
                                <div class="row g-3">
                                    <div class="col-lg-12">
                                        <div class="text-center col-lg-12">
                                            <div class="position-relative d-inline-block">
                                                <div class="position-absolute bottom-0 end-0">
                                                    <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title=@sharedResource["Select Main Product Image"]>
                                                        <div class="avatar-xs cursor-pointer">
                                                            <div class="avatar-title bg-light border rounded-circle text-muted">
                                                                <i class="ri-image-fill"></i>
                                                            </div>
                                                        </div>
                                                    </label>
                                                    <input class="form-control d-none hidefromHere" name="file" id="file" type="file"
                                                           accept="image/*" required>
                                                </div>
                                                <div class="avatar-lg p-1">
                                                    <div class="avatar-title bg-light rounded-circle">
                                                        <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover removeFromHere" />
                                                    </div>
                                                </div>
                                            </div>
                                            <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label asp-for="AddItem.ItemTitleAr" class="form-label">@(sharedResource["Arabic Title"])</label>

                                            <input type="text" asp-for="AddItem.ItemTitleAr" class="form-control" placeholder="@sharedResource["Enter Arabic Title"]" required />

                                            <span asp-validation-for="AddItem.ItemTitleAr" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddItem.ItemTitleEn" class="form-label">@sharedResource["English Title"]</label>
                                            <input type="text" asp-for="AddItem.ItemTitleEn" class="form-control" placeholder="@sharedResource["Enter English Title"]" required />
                                            <span asp-validation-for="AddItem.ItemTitleEn" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddItem.OurSellingPrice" class="form-label">@sharedResource["Our Selling Price"]</label>
                                            <input type="number" min="1" asp-for="AddItem.OurSellingPrice" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Our Selling Price"]" required />
                                            <span asp-validation-for="AddItem.OurSellingPrice" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddItem.SellingPriceForCustomer" class="form-label">@sharedResource["Selling Price To Customer"]</label>
                                            <input type="number" min="1" asp-for="AddItem.SellingPriceForCustomer" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Selling Price To Customer"]" required />
                                            <span asp-validation-for="AddItem.SellingPriceForCustomer" class="text-danger"></span>
                                        </div>
                                    </div>
                                  
                                    <div class="col-lg-12">
                                        <div>
                                            <label for="AddItem.ItemDescriptionAr" class="form-label">@sharedResource["Arabic Description"]</label>
                                            <textarea id="textareacontent" asp-for="AddItem.ItemDescriptionAr" class="form-control" placeholder="@sharedResource["Enter Arabic Description"]"></textarea>
                                            <span asp-validation-for="AddItem.ItemDescriptionAr" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-lg-12">
                                        <div>
                                            <label for="AddItem.ItemDescriptionEn" class="form-label">@sharedResource["English Description"]</label>
                                            <textarea id="textareacontent" asp-for="AddItem.ItemDescriptionEn" class="form-control" placeholder="@sharedResource["Enter English Description"]"></textarea>
                                            <span asp-validation-for="AddItem.ItemDescriptionEn" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <label asp-for="AddItem.MiniSubCategoryId" for="car-rental-name">@sharedResource["Category"] <small class="text-danger">*</small></label>

                                        <select data-val="true" data-val-required="@sharedResource["Please choose a Catagory"]" id="catId" asp-for="AddItem.MiniSubCategoryId" class="form-select required" aria-label="Default select example" required>
                                            <option selected value="Select Type">@sharedResource["Select Category"]</option>

                                            @{
                                                if (@Categories != null)
                                                {
                                                    foreach (var item in @Categories)

                                                    {
                                                        if (Model.BrowserCulture == "en-US")

                                                        {

                                                            <option value="@item.MiniSubCategoryId">@item.MiniSubCategoryTLEN</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.MiniSubCategoryId">@item.MiniSubCategoryTLAR</option>

                                                        }
                                                    }
                                                }
                                            }

                                        </select>

                                        <span asp-validation-for="AddItem.MiniSubCategoryId" class="text-alert"></span>
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddItem.OrderIndex" class="form-label">@sharedResource["Sort Index"]</label>
                                            <input type="number" min="1" asp-for="AddItem.OrderIndex" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Sort Index"]" required />
                                            <span asp-validation-for="AddItem.OrderIndex" class="text-danger"></span>
                                        </div>
                                    </div>
                                   


                                    <div class="col-md-6 form-group">
                                        <label for="formFile" class="form-label">@sharedResource["Adding Others Images For Item"]</label>
                                        <input class="form-control" multiple name="MorePhoto" type="file">
                                    </div>
                                    <div class="col-lg-6">
                                        <div>
                                            <label for="AddItem.VideoUrl" class="form-label">@sharedResource["Video Url"]</label>
                                            <input type="url" asp-for="AddItem.VideoUrl" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Video URL"]" />
                                            <span asp-validation-for="AddItem.VideoUrl" class="text-danger"></span>
                                        </div>
                                    </div>
                                    @*<div class="col-lg-6">
                                        <div class="form-check">
                                            <input asp-for="AddItem.IsActive" class="form-check-input" type="checkbox">
                                            <label for="AddItem.IsActive" class="form-check-label">@sharedResource["Active"]</label>
                                            <span asp-validation-for="AddItem.IsActive" class="text-danger"></span>
                                        </div>
                                    </div>*@
                                    <div class="col-lg-6" style="padding-top: 2rem;">
                                        <div class="form-check">
                                            <input asp-for="AddItem.HasSubProduct" class="form-check-input" type="checkbox" id="checkboxId">
                                            <label for="AddItem.HasSubProduct" class="form-check-label">@sharedResource["Has SubProduct"]</label>
                                            <span asp-validation-for="AddItem.HasSubProduct" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6" id="itemQuaintityId">
                                        <div>
                                            <label for="AddItem.Quantity" class="form-label">@sharedResource["Quantity"]</label>
                                            <input type="number" min="0" asp-for="AddItem.Quantity" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Quantity"]" />
                                            <span asp-validation-for="AddItem.Quantity" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <!--end row-->
                            </div>

                            <div class="modal-footer pt-2">
                                <div class="hstack gap-2 justify-content-end">
                                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">@sharedResource["Close"]</button>
                                    <button class="btn btn-success" id="add-btn">@sharedResource["Add Product"]</button>
                                </div>
                            </div>
                        </form>


                    </div>
                    <!--end row-->
                </div>

            </div>
        </div>
    </div>
    <!--end col-->
</div>
<!--end row-->
<!--datatable js-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section scripts{
    <!-- list.js min js -->
    <script src="~/assets/libs/list.js/list.min.js"></script>
    <script src="~/assets/libs/list.pagination.js/list.pagination.min.js"></script>
    <!-- crm leads init -->
    <script src="~/assets/js/pages/crm-leads.init.js"></script>
    <script src="~/js/tinymce/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        tinymce.init({
            selector: 'textarea',
            statusbar: false,
            promotion: false,
            branding: false,

        });

        function validateMyForm() {


            if (document.getElementById("file").files.length == 0) {
                alert("You Must Select Image");
                return false;
            }
            return true;
        }
        const checkbox = document.getElementById('checkboxId');
        const box = document.getElementById('itemQuaintityId');

        checkbox.addEventListener('click', function handleClick() {
            if (checkbox.checked) {
              
                 box.style.display = 'none';
            } else {
                box.style.display = 'block';
            }
        });
    </script>

}


