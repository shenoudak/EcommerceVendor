@page
@model Jovera.Areas.Store.Pages.ManageSubProduct.IndexModel
@Html.AntiForgeryToken()
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    Layout = "_Layout";
}
<!--datatable css-->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" />
<!--datatable responsive css-->
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">

<style>
    .dataTables_filter {
        display: none;
    }
</style>


<div class="row">
    <div class="col-lg-12">
        <div class="card" id="List">
            <div class="card-header border-0">
                <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />
                @* <input type="text" asp-for="@Model.Vendor.StoreId" value="@Model.Vendor.StoreId" hidden />*@

                <div class="row g-4 align-items-center">
                    <div class="col-sm-3">
                        <div class="search-box">
                            <input type="text" class="form-control search" id="txtSearch"
                                   placeholder="@sharedResource["Search for..."]">
                            <i class="ri-search-line search-icon"></i>
                        </div>
                    </div>
                    <div class="col-sm-auto ms-auto">
                        <div class="hstack gap-2">

                            <button type="button" class="btn btn-success add-btn"
                                    data-bs-toggle="modal" id="create-btn"
                                    data-bs-target="#AddModal">
                                <i class="ri-add-line align-bottom me-1"></i> @sharedResource["Add SubProduct"]
                            </button>

                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div>
                    <div class="table-responsive table-card">
                        <table id="myTable" class="table  dt-responsive nowrap  align-middle" style="width:100%">
                            <thead class="table-light">
                                <tr>



                                    <th data-ordering="false">@sharedResource["QRCode"]</th>
                                    <th data-ordering="false">@sharedResource["Step One Arabic Title"]</th>
                                    <th data-ordering="false">@sharedResource["Step One English Title"]</th>
                                    <th data-ordering="false">@sharedResource["Step Two Arabic Title"]</th>
                                    <th data-ordering="false">@sharedResource["Step Two English Title"]</th>
                                    <th data-ordering="false">@sharedResource["Quantity"]</th>

                                    <th data-ordering="false">@sharedResource["Actions"]</th>
                                </tr>
                            </thead>

                        </table>
                    </div>

                </div>

            </div>

            <!--end modal-->
        </div>
    </div>
    <!--end col-->
</div>

<partial name="_AddPopup" model="@Model.addSubProduct" view-data="ViewData" />
<partial name="_ViewPopup" model="@Model.addSubProduct" view-data="ViewData" />
<partial name="_EditPopup" model="@Model.addSubProduct" view-data="ViewData" />
<partial name="_DatchDelete" model="@Model.addSubProduct" view-data="ViewData" />

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
@section scripts{
    <!-- list.js min js -->
    <script src="~/assets/libs/list.js/list.min.js"></script>
    <script src="~/assets/libs/list.pagination.js/list.pagination.min.js"></script>
    <!-- crm leads init -->
    <script src="~/assets/js/pages/crm-leads.init.js"></script>
    <script src="~/js/tinymce/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        tinymce.init({
            selector: 'textarea',
            statusbar: false,
            promotion: false,
            branding: false,

        });

    </script>

}

<script>





    $(document).ready(function () {
        $("#myTable").DataTable({
            "proccessing": true,
            "serverSide": true,
            "ajax": {

                url: "/Store/ManageSubProduct/Index",
                type: 'POST',
                headers: { 'XSRF-TOKEN': $('@Html.AntiForgeryToken()').val() }
            },
            "columnDefs": [
                {
                    "targets": -1,
                    "data": null,
                    "render": function (data, type, row, meta) {
                        let linkHtml = ` <ul class="list-inline hstack gap-2 mb-0">
                                    <li class="list-inline-item" data-bs-toggle="tooltip"data-bs-trigger="hover" data-bs-placement="top"title=@sharedResource["View"]><a href="javascript:void(0)" data-bs-toggle="modal"><i class="ri-eye-fill align-bottom text-muted" onclick="ShowViewPopUp(${row.MiniSubProductId})" ></i></a></li>
                                <li class="list-inline-item" data-bs-toggle="tooltip"
                                                                       data-bs-trigger="hover" data-bs-placement="top"
                                                                      title=@sharedResource["Edit"]>
                                                                             <a href="javascript:void(0)" data-bs-toggle="modal">

                                                                               <i class="ri-pencil-fill align-bottom text-muted" onclick="EditSubProduct(${row.MiniSubProductId})"></i>
                                                                       </a>
                                                                  </li>
                                        <li class="list-inline-item" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top"title=@sharedResource["Delete"]> <a class="remove-item-btn" data-bs-toggle="modal"href="javascript:void(0)" > <i class="ri-delete-bin-fill align-bottom text-muted" onclick="deleteSubProduct(${row.MiniSubProductId})"></i> </a></li></ul>`
                        return linkHtml;
                    },
                    "sortable": false
                },

                {
                    "name": "ItemQRCode", "data": "ItemQRCode", "targets": 0, "visible": true,
                    "render": function (data, type, row, meta) {

                        return `<img src='/${data}' alt='' class='avatar-xxs rounded-circle image_src object-cover'>`;

                    }
                },

                { "name": "StepOneTLAR", "data": "StepOneTLAR", "targets": 1 },
                { "name": "StepOneTLEN", "data": "StepOneTLEN", "targets": 2 },
                { "name": "StepTwoTLAR", "data": "StepTwoTLAR", "targets": 3 },
                { "name": "StepTwoTLEN", "data": "StepTwoTLEN", "targets": 4 },
                { "name": "Quantity", "data": "Quantity", "targets": 5 },




            ],
            "order": [[2, "desc"]],
            "language": {
                "lengthMenu": "Show _MENU_",
            },
            "dom":
                "<'row'" +
                "<'col-sm-6 d-flex align-items-center justify-conten-start'l>" +
                "<'col-sm-6 d-flex align-items-center justify-content-end'f>" +
                ">" +

                "<'table-responsive'tr>" +

                "<'row'" +
                "<'col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start'i>" +
                "<'col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end'p>" +
                ">",
            "createdRow": function (row, data, dataIndex) {
                var tdElements = $(row).find('td');
                $(tdElements[tdElements.length - 1]).addClass('text-end');
            }
        });
    });
    $('#txtSearch').keyup(function () {
        var table = $('#myTable').DataTable();
        table.search($(this).val()).draw();
    });

    function validateMyForm() {


        if (document.getElementById("file").files.length == 0) {
            alert("You Must Select Image");
            return false;
        }
        return true;
    }




    function EditSubProduct(MiniSubProductId) {
        console.log(MiniSubProductId);
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/Store/ManageSubProduct/Index?handler=SingleMiniSubProductForEdit",

            data: { "MiniSubProductId": MiniSubProductId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                document.getElementById("EQuantityId").value = response.Quantity
                document.getElementById("EStepTwoId").value = response.StepTwoId
                document.getElementById("ESubProductStepOneId").value = response.SubProductStepOneId
                document.getElementById("EMiniSubProductId").value = response.MiniSubProductId


                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }


    function ShowViewPopUp(MiniSubProductId) {


        $.ajax({
            type: "GET",
            url: "/Store/ManageSubProduct/Index?handler=SingleMiniSubProductForView",
            data: { "MiniSubProductId": MiniSubProductId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                console.log(response);
                document.getElementById("DItemQRCodeId").src = "/" + response.ItemQRCode
                document.getElementById("DStepOneTLARId").innerHTML = response.StepOneTLAR
                document.getElementById("DStepOneTLENId").innerHTML = response.StepOneTLEN
                document.getElementById("DStepTwoTLARId").innerHTML = response.StepTwoTLAR
                document.getElementById("DStepTwoTLENId").innerHTML = response.StepTwoTLEN
                document.getElementById("DQuantityId").innerHTML = response.Quantity




                $('#QuickViewPoup').modal('show');

            },
            failure: function (response) {
                alert(response);
            }
        });

    }
    function deleteSubProduct(MiniSubProductId) {


        $.ajax({
            type: "GET",
            url: "/Store/ManageSubProduct/Index?handler=SingleMiniSubProductForDelete",
            data: { "MiniSubProductId": MiniSubProductId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {

                document.getElementById("DeleteMiniSubProductId").value = response.MiniSubProductId

                $('#deleteRecordModal').modal('show');


            },
            failure: function (response) {
                alert(response);
            }
        });
    }






</script>      