@using Jovera.Data
@inject CRMDBContext _context
@{
    var firstStepList = _context.StepOnes.Select(e => new { e.StepOneId, e.StepOneTLAR,e.StepOneTLEN });
    var locale = Context.Request.HttpContext.Features.Get<IRequestCultureFeature>();
    var BrowserCulture = locale.RequestCulture.UICulture.ToString();
}
@model Jovera.Models.SubProductStepOne

<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="AddModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="exampleModalLabel">@sharedResource["Add SubProduct StepOne"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
            </div>

            <form asp-area="Store" asp-page="/ManageSubProduct/AddStepOneSubProduct/Index" asp-page-handler="AddSubProductStepOne" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                <div class="modal-body">
                    <input type="text" hidden value="@Model.ItemId"  />
                    <div class="row g-3">
                        <div class="col-lg-12">
                            <div class="text-center col-lg-12">
                                <div class="position-relative d-inline-block">
                                    <div class="position-absolute bottom-0 end-0">
                                        <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title=@sharedResource["Select Main Product Image"]>
                                            <div class="avatar-xs cursor-pointer">
                                                <div class="avatar-title bg-light border rounded-circle text-muted">
                                                    <i class="ri-image-fill"></i>
                                                </div>
                                            </div>
                                        </label>
                                        <input class="form-control d-none hidefromHere" name="file" id="file" type="file"
                                               accept="image/*" required>
                                    </div>
                                    <div class="avatar-lg p-1">
                                        <div class="avatar-title bg-light rounded-circle">
                                            <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover removeFromHere" />
                                        </div>
                                    </div>
                                </div>
                                <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>
                            </div>
                        </div>
   

                        <div class="col-lg-12">
                            <label asp-for="@Model.StepOneId" for="car-rental-name">@sharedResource["Step One"] <small class="text-danger">*</small></label>

                            <select data-val="true" data-val-required="@sharedResource["Please choose a Step One"]" id="catId" asp-for="@Model.StepOneId" class="form-select required" aria-label="Default select example" required>
                                <option selected value="Select Type">@sharedResource["Select Step One"]</option>

                                @{
                                    if (firstStepList != null)
                                    {
                                        foreach (var item in @firstStepList)

                                        {
                                             if (BrowserCulture == "en-US")
                                            {

                                                <option value="@item.StepOneId">@item.StepOneTLEN</option>
                                            }else{
                                                <option value="@item.StepOneId">@item.StepOneTLAR</option>

                                            }
                                        }
                                    }
                                }

                            </select>

                            <span asp-validation-for="@Model.StepOneId" class="text-alert"></span>
                        </div>

                      
                       
                    </div>
                    <!--end row-->
                </div>
         
                <div class="modal-footer">
                    <div class="hstack gap-2 justify-content-end">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">@sharedResource["Close"]</button>
                        <button class="btn btn-success" id="add-btn">@sharedResource["Add SubProduct StepOne"]</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
