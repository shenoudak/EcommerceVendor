                                            <div class="form-group col">
                                                <label asp-for="Input.UserName" class="form-label text-color-dark text-3">@sharedResource["Vendor Name"] <span class="text-color-danger">*</span></label>
                                                <input asp-for="Input.UserName" type="text" class="form-control form-control-lg text-4" required="">
                                                <span asp-validation-for="Input.UserName" class="text-danger"></span>

                                            </div>
                                        </div>
